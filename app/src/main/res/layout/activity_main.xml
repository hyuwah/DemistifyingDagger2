<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:text="Open Hotel Main"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:text="Open Flight Main"
        app:layout_constraintTop_toBottomOf="@id/btn_hotel" />

    <Button
        android:id="@+id/btn_crypto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:text="Open Crypto Main (DFM)"
        app:layout_constraintTop_toBottomOf="@id/btn_flight" />

    <Button
        android:id="@+id/btn_stocks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:text="Open Stocks Main (DFM)"
        app:layout_constraintTop_toBottomOf="@id/btn_crypto" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App Main Page"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>